{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "AA: Start API (clean)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile","-ExecutionPolicy","Bypass",
        "-File","scripts/start_api_clean.ps1",
        "-Secret","${config:AI_AGENT_HTTP_SECRET}"
      ],
      "options": { "cwd": "D:\\AI-Agent" }
    },
    {
      "label": "AA: Start Bot (clean)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile","-ExecutionPolicy","Bypass",
        "-File","scripts/start_bot_clean.ps1"
      ],
      "options": { "cwd": "D:\\AI-Agent" }
    },
    {
      "label": "AA: Health Check",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile","-ExecutionPolicy","Bypass",
        "-Command",
        "$h=@{'x-agent-secret'='${config:AI_AGENT_HTTP_SECRET}'}; irm http://127.0.0.1:8088/health -Headers $h"
      ],
      "options": { "cwd": "D:\\AI-Agent" }
    }
  ]
}
